page {
  background: url('https://www.huachengzhubao.com/syweb10/static/images/mybg.jpg') no-repeat;
  background-size: 100%;
  background-color: #f1f1f1;
}

.header {
  text-align: center;
}

.header image {
  width: 109rpx;
  height: 109rpx;
  border: 5rpx #fff solid;
  border-radius: 50%;
}

.hello {
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}

.hello view {
  margin-bottom: 10rpx;
}

.items {
  display: flex;
  width: 680rpx;
  margin: 40rpx auto 0;
  justify-content: space-between;
}

.item {
  text-align: center;
}

.item image {
  width: 45rpx;
  height: 45rpx;
}

.item text {
  display: block;
  color: #fff;
  font-size: 22rpx;
}

.tools {
  width: 440rpx;
  height: 96rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 35rpx auto 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tools-item{
  position: relative;
}

.btn_contact{
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}


.tools-item image {
  height: 42rpx;
  width: 42rpx;
  display: block;
  margin: 0 auto;
}

.tools-item view {
  color: #666;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.recommend-title{
  text-align: center;
  margin: 50rpx auto 0;
}

.recommend-title image{
  width: 38rpx;
  height: 30rpx;
}

.recommend-title text{
  font-size: 26rpx;
  color: #F7415E;
}

.recommend-body{
  padding:10rpx 26rpx 40rpx;
}

.hotsale-item{
  margin-top:15rpx;
}
