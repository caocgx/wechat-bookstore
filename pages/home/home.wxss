/* 轮播 */

.swiper {
  width: 730rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  border-radius: 5px;
  text-align: center;
}

swiper swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.loading {
  width: 43rpx;
  height: 43rpx;
  margin-top: 30px;
}

/* 菜单 */

.nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.nav .nav-item {
  width: 150rpx;
  text-align: center;
  margin-top: 30rpx;
}

.nav .nav-item .nav-item-img image {
  width: 90rpx;
  height: 90rpx;
}

.nav .nav-item .nav-item-text {
  font-size: 23rpx;
  color: #5d5d5d;
}

/* 畅销书TOP6 */

.hotsale {
  background-color: #fbbebd;
  margin-top: 28rpx;
}

.hotsale .hotsale-box, .Pinkage .hotsale-box {
  padding: 26rpx;
}

.hotsale-title {
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.hotsale-title .hotsale-title-more {
  float: right;
}

/* 快讯 */

.news {
  width: 100%;
  height: 70rpx;
  background: -webkit-linear-gradient(#fbbebd, #9cc); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#fbbebd, #9cc); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#fbbebd, #9cc); /* Firefox 3.6 - 15 */
  background: linear-gradient(#fbbebd, #9cc); /* 标准的语法 */
}

.news-box {
  display: flex;
  align-items: center;
  width: 700rpx;
  height: 70rpx;
  overflow: hidden;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 12rpx;
}

.news-ico image {
  width: 90rpx;
  height: 34rpx;
  margin-left: 20px;
}

.news-body swiper {
  width: 550rpx;
  height: 70rpx;
  color: #666;
  line-height: 70rpx;
  font-size: 24rpx;
  text-align: left;
  overflow: hidden;
  margin-left: 20rpx;
}

.stars2{
  padding: 0 20rpx;
  text-align: left;
}

.stars image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 5rpx;
}

/* 特价包邮 */

.Pinkage {
  background-color: #9cc;
}

.Pinkage .hotsale-body .hotsale-item {
  position: relative;
}

.Pinkage .hotsale-body .hotsale-item .ico99 {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 74rpx;
  height: 74rpx;
}

/* 渐变 */

.liner {
  height: 70rpx;
  background: -webkit-linear-gradient(#9cc, #fff); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#9cc, #fff); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#9cc, #fff); /* Firefox 3.6 - 15 */
  background: linear-gradient(#9cc, #fff); /* 标准的语法 */
}

/* 五星榜 */

.fiveStars {
  margin-top: 28rpx;
}

.fiveStars-item-title {
  display: flex;
  justify-content: space-between;
}

.fiveStars-item-title-more {
  margin-right: 35rpx;
  font-size: 24rpx;
  color: #999;
}

.fiveStars-item-title-name {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  width: 318rpx;
  height: 51rpx;
  color: #fff;
  /* line-height: 54rpx; */
  border-bottom-right-radius: 30rpx;
}

.titlebg-color-pruple {
  background: -webkit-linear-gradient(45deg, #d4abfc, #b065f9); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(45deg, #d4abfc, #b065f9); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(45deg, #d4abfc, #b065f9); /* Firefox 3.6 - 15 */
  background: linear-gradient(45deg, #d4abfc, #b065f9); /* 标准的语法 */
}

.titlebg-color-yellow {
  background: -webkit-linear-gradient(45deg, #ffc876, #f90); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(45deg, #ffc876, #f90); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(45deg, #ffc876, #f90); /* Firefox 3.6 - 15 */
  background: linear-gradient(45deg, #ffc876, #f90); /* 标准的语法 */
}

.titlebg-color-red {
  background: -webkit-linear-gradient(45deg, #ff9a94, #ff3b30); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(45deg, #ff9a94, #ff3b30); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(45deg, #ff9a94, #ff3b30); /* Firefox 3.6 - 15 */
  background: linear-gradient(45deg, #ff9a94, #ff3b30); /* 标准的语法 */
}

.fiveStars-item-title-name image {
  width: 38rpx;
  height: 36rpx;
  margin-left: 16rpx;
}

.fiveStars-item-title-name text {
  margin-left: 8rpx;
}

.red-star25x25, .gray-star25x25, .yellow-star25x25 {
  width: 25rpx;
  height: 25rpx;
}

.fiveStars-item-body {
  padding: 20rpx 35rpx 40rpx 35rpx;
  display: flex;
  justify-content: space-between;
}

.fiveStars-title {
  width: 430rpx;
  height: 80rpx;
  overflow: hidden;
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.fiveStars-comment {
  display: flex;
  align-items: center;
  width: 300rpx;
  margin: 20rpx 0;
}

.comment-counts {
  color: #acb4bd;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.fiveStars-price {
  color: #d81e06;
  font-size: 22rpx;
}

.fiveStars-price text {
  font-size: 40rpx;
}

.fiveStars-item-body-right image {
  width: 157rpx;
  height: 216rpx;
}


/* 渐变3 */

.liner3 {
  height: 70rpx;
  background: -webkit-linear-gradient(#fff, #aee800); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#fff, #aee800); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#fff, #aee800); /* Firefox 3.6 - 15 */
  background: linear-gradient(#fff, #aee800); /* 标准的语法 */
}


/* 音乐榜 */

.musicTop {
  background-color: #aee800;
}

.musicTop-box {
  padding:26rpx 26rpx 0;
}

.musicTop .hotsale-box .hotsale-body .hotsale-item {
  margin-bottom: 40rpx;
}

.musicTop .hotsale-box .hotsale-body .hotsale-item .hotsale-item-title {
  text-align: left;
}

.musicTop .hotsale-box .hotsale-body .hotsale-item .stars5 {
  padding: 0 20rpx;
  text-align: left;
}

.musicTop .hotsale-box .hotsale-body .hotsale-item .hotsale-item-price {
  color: #ff5c00;
  padding: 0 20rpx;
  text-align: left;
}

