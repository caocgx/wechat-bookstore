page{
  background-color: #EAEAEA;
}

.cart{
  background-color: #fff;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.item-box{
  padding: 46rpx 66rpx 36rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px #A2A2A2 dotted;
}

.item-left image{
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.item-right{
  margin-left: 40rpx;
  width: 100%;
}

.item-title{
  font-size: 26rpx;
  color: #000;
  overflow: hidden;
}

.item-price{
  font-size: 26rpx;
  color: #FF5854;
  margin: 10rpx 0;
}

.item-option{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.del image{
  width: 35rpx;
  height: 40rpx;
}

.opt-box{
  display: flex;
  justify-content: space-between;
  width:164rpx;
  height: 40rpx;
  border: 1px #A2A2A2 solid;
  border-radius: 8rpx;
  align-items: center;
  overflow: hidden;
}

.opt-sub,.opt-add{
  width: 43rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.opt-input{
  border-left: 1px solid #A2A2A2;
  border-right: 1px solid #A2A2A2;
}

.opt-input input{
  width: 72rpx;
  height: 40rpx;
  text-align: center;
  font-size: 26rpx;
}

.cart-item{
  border-bottom: #999 1px dotted;
}

.cart-cash{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 46rpx 80rpx 46rpx 0;
}

.cash-name{
  color: #999;
  font-size: 23rpx;
}

.cash-total{
  font-size: 28rpx;
  color: #FB4741;
  font-weight: bold;
}

.cash-pay{
  background-color: #FB4741;
  width: 230rpx;
  height: 72rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
  margin-left: 32rpx;
}