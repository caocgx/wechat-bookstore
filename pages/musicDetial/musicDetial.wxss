.music-info {
  background: #fff;
}

.comm-info {
  margin: 25rpx 0;
}

.comm-box {
  padding: 25rpx 35rpx;
}

.info-title, .comment-title, .prcie-title, .lyrics-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  border-left: 7rpx red solid;
  padding-left: 10rpx;
}

.commonstyle {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  border-bottom: #eaeaea 1px solid;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 17rpx;
}

.commonstyle:last-child {
  border: none;
}

.commonstyle text {
  padding-right: 60rpx;
}

.info-view {
  color: #aaa;
}

.music-player {
  width: 680rpx;
  height: 130rpx;
  margin: 0 auto;
  border: #e1e1e1 1px solid;
  background: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}

.poster {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  background-size: contain;
}

.poster image {
  width: 48rpx;
  height: 48rpx;
}

.music-player {
  display: flex;
  align-items: center;
}

.music-product {
  width: 65%;
  margin-left: 30rpx;
}

.music-product text {
  display: block;
  font-size: 24rpx;
  color: #aaa;
  margin-bottom: 5rpx;
}

.music-product text:first-child {
  color: #000;
}

.music-time {
  font-size: 22rpx;
  color: #aaa;
}

.price-box {
  padding-top: 0;
}

.prcie-title {
  border-left: 7rpx solid #639ace;
}

.prcie-title text {
  font-weight: normal;
  color: red;
}

.music-control {
  display: flex;
  padding: 20rpx 0 0 17rpx;
}

.music-control view {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  width: 100rpx;
  height: 35rpx;
  border: 1px #639ace solid;
  border-radius: 35rpx;
  margin-right: 30rpx;
}

.music-control view image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.lyrics-body {
  font-size: 22rpx;
  color: #aaa;
  padding: 10rpx 0 0 17rpx;
}

.lyrics-title {
  border-left: 7rpx solid #FF5C00;
}

.comm-comment {
  margin-bottom: 130rpx;
}

.comment-item {
  border-bottom: 1rpx #eaeaea solid;
  padding-bottom: 30rpx;
}

.comment-item:last-child {
  border: none;
}

.comment-title {
  border-left: 7rpx #fc0 solid;
}

.author-header {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.header-photo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.author-name {
  font-size: 26rpx;
  vertical-align: middle;
}

.stars image {
  width: 25rpx;
  height: 25rpx;
  vertical-align: middle;
}

.comment-body {
  font-size: 24rpx;
  color: #aaa;
}

.info-box {
  padding-bottom: 0;
}
