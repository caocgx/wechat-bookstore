page {
  background: #eaeaea;
}

.swiper {
  background: #fff;
}

.swiper-box {
  width: 470rpx;
  height: 710rpx;
  margin: 0 auto;
}

.swiper swiper {
  width: 470rpx;
  height: 710rpx;
}

.swiper swiper image {
  width: 100%;
  height: 710rpx;
}

.view, .price, .comm-info, .comm-comment {
  background: #fff;
}

.comm-info {
  margin: 25rpx 0;
}

.comm-box {
  padding: 30rpx 35rpx 0;
}

.title-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.title-name text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  border-left: red 7rpx solid;
  padding-left: 10rpx;
}

.title-name image {
  width: 131rpx;
  height: 36rpx;
}

.view-body {
  font-size: 22rpx;
  color: #666;
  padding: 10rpx 0 0 17rpx;
}

.price {
  padding: 0 0 15rpx 42rpx;
  color: red;
  font-size: 26rpx;
}

.price text {
  font-size: 30rpx;
}

.info-title, .comment-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  border-left: 7rpx #96c solid;
  padding-left: 10rpx;
}

.commonstyle {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  border-bottom: #eaeaea 1px solid;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 17rpx;
}

.commonstyle:last-child{
  border: none;
}

.commonstyle text {
  padding-right: 60rpx;
}

.comm-comment{
  margin-bottom: 130rpx;
}

.comment-item{
  border-bottom: 1rpx #eaeaea solid;
  padding-bottom: 30rpx;
}

.comment-item:last-child{
  border: none;
}

.comment-title {
  border-left: 7rpx #FFCC00 solid;
}

.author-header{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}
.header-photo{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}


.author-name{
  font-size: 26rpx;
  vertical-align: middle;
}

.stars image {
  width: 25rpx;
  height: 25rpx;
  vertical-align: middle;
}

.comment-body{
  font-size: 24rpx;
  color: #666;
}
